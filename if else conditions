import java.util.Scanner;
class Javastart {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Enter your name");
        String name = input.nextLine();
        System.out.println("hi " + name);
        if(!name.isEmpty() && (!name.endsWith("a") || name.equals("Barnaba") || name.equals("kuba"))){
            System.out.println("Jestes mezczyzna");
        else if (!name.isEmpty() && name.endsWith("a")) {
            System.out.println("Jestes kobieta");
        }
        
        }
        else {System.out.println("Podaj imie, imie nie moze byc puste");}
    }




}
